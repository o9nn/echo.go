# Deep Tree Echo - Autonomous Consciousness Server
# Production-grade Dockerfile for echoself deployment
# Note: Previous Python version archived in pyversion branch

# Build stage
FROM golang:1.24-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

# Set working directory
WORKDIR /src

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the autonomous server
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags='-s -w -extldflags "-static"' \
    -o /echoself \
    ./cmd/autonomous/

# Runtime stage
FROM alpine:3.19

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN adduser -D -g '' echoself
USER echoself

# Set working directory
WORKDIR /app

# Copy binaries from builder
COPY --from=builder /echoself /app/echoself

# Copy schema files
COPY --from=builder /src/core/memory/schema.dql /app/schema.dql

# Environment variables
ENV DGRAPH_ENDPOINT=dgraph-alpha:9080
ENV ANTHROPIC_API_KEY=""
ENV OPENROUTER_API_KEY=""
ENV SUPABASE_URL=""
ENV SUPABASE_KEY=""

# Expose ports
# 11434: Ollama-compatible API
# 8081: HTTP API
# 50051: gRPC API
EXPOSE 11434 8081 50051

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8081/health || exit 1

# Default command
CMD ["/app/echoself"]
