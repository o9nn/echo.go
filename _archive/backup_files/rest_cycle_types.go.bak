package deeptreeecho

import "time"

// RestCyclePattern represents a recurring pattern in thoughts or experiences (for rest cycle)
type RestCyclePattern struct {
	Type        string
	Description string
	Frequency   int
	Strength    float64
	Examples    []*Thought
}

// RestCycleInsight represents an insight derived from patterns (for rest cycle)
type RestCycleInsight struct {
	Content    string
	Source     string
	Confidence float64
	Timestamp  time.Time
	RelatedTo  []string
}
